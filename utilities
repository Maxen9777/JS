// Callback-funktion som summerar priset för varje rätt
function sumPriceCB(acc, dish) {
    return acc + dish.pricePerServing;
}
export function menuPrice(dishesArray){
    return dishesArray.reduce(sumPriceCB, 0); // använd reduce med startvärde 0
    
}

